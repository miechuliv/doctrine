<?php



use Doctrine\ORM\Mapping as ORM;

/**
 * Reminder
 */
class Reminder
{
    /**
     * @var \DateTime
     */
    private $date;

    /**
     * @var integer
     */
    private $dayInterval;

    /**
     * @var integer
     */
    private $hourInterval;

    /**
     * @var integer
     */
    private $reminderId;


    /**
     * Set date
     *
     * @param \DateTime $date
     * @return Reminder
     */
    public function setDate($date)
    {
        $this->date = $date;

        return $this;
    }

    /**
     * Get date
     *
     * @return \DateTime 
     */
    public function getDate()
    {
        return $this->date;
    }

    /**
     * Set dayInterval
     *
     * @param integer $dayInterval
     * @return Reminder
     */
    public function setDayInterval($dayInterval)
    {
        $this->dayInterval = $dayInterval;

        return $this;
    }

    /**
     * Get dayInterval
     *
     * @return integer 
     */
    public function getDayInterval()
    {
        return $this->dayInterval;
    }

    /**
     * Set hourInterval
     *
     * @param integer $hourInterval
     * @return Reminder
     */
    public function setHourInterval($hourInterval)
    {
        $this->hourInterval = $hourInterval;

        return $this;
    }

    /**
     * Get hourInterval
     *
     * @return integer 
     */
    public function getHourInterval()
    {
        return $this->hourInterval;
    }

    /**
     * Get reminderId
     *
     * @return integer 
     */
    public function getReminderId()
    {
        return $this->reminderId;
    }
}
